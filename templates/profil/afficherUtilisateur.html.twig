{% extends 'base.html.twig' %}

{% block title %}
    Profil de {{ user.getUsername }}
{% endblock %}

{% block body %}
    <body>
    <div class="header-content">
        <nav>
            <ul>
                <li class="accueil">
                    <a href="{{ path('app_accueil') }}" title = "recompenses">
                        <span>Accueil</span>
                    </a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="admin">
                        <a href="{{ path('admin') }}" title = "admin">Page administrateur</a>
                    </li>
                {% endif %}

                <li class="recompenses">
                    <a href="{{ path('app_recompenses') }}" title = "recompenses">
                        <span>Récompenses</span>
                    </a>
                </li>
                <li class="tournois">
                    <a href="{{ path('app_tournois') }}" title = "tournois">
                        <span>Tournois</span>
                    </a>
                </li>

                {% if not app.user %}

                    <li class ="connexion">
                        <a href="{{ path('app_login') }}" class = "menu-link" title = "connexion">

                            <span>Se connecter</span>
                        </a>
                    </li>

                    <li class ="contact">
                        <a href="{{ path('app_contact') }}" class = "menu-link" title = "contact">

                            <span>Contact</span>
                        </a>
                    </li>

                {% elseif app.user %}
                    <li class="menu_deconnexion">
                        <a href="{{ path('app_logout') }}" title = "deconnexion">
                            <span>Se déconnecter</span>
                        </a>
                    </li>{% endif %}
            </ul>
        </nav>
    </div>

        <h2 class="col-10 text-center pt-2 pb-5">{{ user.getUsername}}</h2>

        <form method="post" class="d-flex col-4 flex-wrap">
            <img src="{{ asset('images/user/' ~ user.imageName) }}" alt="avatar" height="400px"
                 width="300px">
            <p class="col-6">Prénom :</p><span class="col-6">{{ user.getPrenom }}</span>
            <p class="col-6">Nom :</p><span class="col-6">{{ user.getNom }}</span>
            <p class="col-6">Email :</p><span class="col-6">{{ user.getEmail }}</span>
            <div class="col-12 d-flex justify-content-around mt-4">
                <button class="btn btn-primary btn-lg"><a href="{{ path('app_accueil')}}">Retour</a></button> <br>
                <button class="btn btn-secondary btn-lg "><a href="{{ path('app_monProfil',{'id': user.id}) }}" class="btn btn-primary btn-lg">Modifier mon profil</a></button>
            </div>
        </form>


    {% for participations in participations %}
        <li>{{ participations.tournois}}</li>
    {% endfor %}
    <footer class="footer">
        <div class="footer-left">
            <p class="footer-links">
                <a href="{{ path('app_accueil') }}" class="link-1">Accueil</a>
                <a href="{{ path('app_recompenses') }}" >Récompenses</a>
                <a href="{{ path('app_tournois') }}" >Tournois</a>
                <a href="{{ path('app_contact') }}">Contact</a>
                {% if not app.user %}
                    <a href="{{ path('app_login') }}" >Se connecter</a>
                {%  elseif app.user%}
                    <a href="{{ path('app_logout') }}" >Se déconnecter</a>
                {% endif %}

            </p>
            <p class="footer-company-name">NHCI </p>
        </div>

        <div class="footer-right">
            <p class="footer-company-about">
                <span>About the company</span>
                Lorem ipsum dolor sit amet, consectateur adispicing elit. Fusce euismod convallis velit, eu auctor lacus vehicula sit amet.
            </p>
        </div>
    </footer>
    </body>
{% endblock %}