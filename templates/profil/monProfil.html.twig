{% extends 'base.html.twig' %}

{% block title %}
    Mon Profil
{% endblock %}

{% block body %}
    <body>
    <div>
        <h1 class="text-center">Mon profil</h1>
        <div id="formprofil" class="d-flex justify-content-center align-self-center my-4 ">

            {{ form_start(monProfilForm,{'attr':{'class':'col-4'}}) }}
            <div class="d-flex flex-wrap py-2">
                {{ form_label(monProfilForm.username) }}
                {{ form_widget(monProfilForm.username) }}

            </div>
            <div class="d-flex flex-wrap py-2">
                {{ form_label(monProfilForm.prenom) }}
                {{ form_widget(monProfilForm.prenom) }}

            </div>
            <div class="d-flex flex-wrap py-2">
                {{ form_label(monProfilForm.nom) }}
                {{ form_widget(monProfilForm.nom) }}

            </div>
            <div class="d-flex flex-wrap py-2">
                {{ form_label(monProfilForm.email) }}
                {{ form_widget(monProfilForm.email) }}

            </div>
            <div class="d-flex flex-wrap">
                {{ form_label(monProfilForm.password) }}
                {{ form_widget(monProfilForm.password) }}

            </div>

            <div class="d-flex justify-content-evenly py-5 ">
                <button class="btn btn-primary btn-lg " type="submit">Enregistrer</button>
                <button class="btn btn-secondary btn-lg "><a href="{{ path('app_afficherUtilisateur', {'id': user.id}) }}" class="btn btn-primary btn-lg">Annuler</a></button>
            </div>
            {{ form_end(monProfilForm) }}

        </div>
    </div>
    </body>
{% endblock %}
