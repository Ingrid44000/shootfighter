{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}
   {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset ('css/register_login.css') }}">
{% endblock %}

{% block body %}
<body>
<div id = "form-register">
    {{ form_start(registrationForm) }}
        <div id="header">
            <h1>Création de compte</h1>
        </div>
    <span class ="username">
        {{ form_row(registrationForm.username)}}
    </span>
    <span class ="email">
        {{ form_row(registrationForm.email)}}
    </span>
    <span class ="plainPassword">
        {{ form_row(registrationForm.plainPassword)}}
    </span>
    <br>
    <br>
        <button type="submit" class="btn">S'enregistrer</button>
    <button class="btn btn-lg btn-secondary" type="submit">
        <a href="{{ path('app_login') }}" title = "retour">Retour</a>
    </button>
    {{ form_end(registrationForm) }}
</div>

</body>
{% endblock %}
