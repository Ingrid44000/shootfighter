{% extends 'base.html.twig' %}
{% block title %}Créer un compte{% endblock %}


{% block body %}
    <link rel="stylesheet" href="{{ asset ('css/register_login.css') }}">
    {{ form_start(registrationForm) }}
    <div id = "header">
        <h1>Création de compte</h1>
    </div>
<div id ="username">
        {{ form_row(registrationForm.username)}}
</div>
<div id ="email">
        {{ form_row(registrationForm.email)}}
</div>
<div id ="plainPassword">
        {{ form_row(registrationForm.plainPassword)}}
</div>
    <br>
    <br>
        <button type="submit" class="btn">S'enregistrer</button>

    <button class="btn btn-lg btn-secondary" type="submit">
        <a href="{{ path('app_login') }}" title = "retour">Retour</a>
    </button>
    {{ form_end(registrationForm) }}

{% endblock %}
