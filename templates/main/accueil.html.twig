{% extends 'base.html.twig' %}

{% block title %}Shootfighter{% endblock %}
  {% block stylesheets %}
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;700&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="{{ asset ('css/app.css') }}">
    <link rel="stylesheet" href="{{ asset ('css/accueil.css') }}">
{% endblock %}
{% block body %}
    <body>
    <div class="container">
        <div class="header-content">
            <nav>
                <ul>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="admin">
                            <a href="{{ path('admin') }}" title = "admin">Page administrateur</a>
                        </li>
                    {% endif %}

                    <li class="recompenses">
                        <a href="{{ path('app_recompenses') }}" title = "recompenses">
                            <span>Récompenses</span>
                        </a>
                    </li>
                    <li class="link-tournois">
                        <a href="{{ path('app_tournois') }}" title = "tournois">
                        <span>Tournois</span>
                        </a>
                    </li>

                    {% if not app.user %}

                        <li class ="connexion">
                        <a href="{{ path('app_login') }}" class = "menu-link" title = "connexion">

                            <span>Se connecter</span>
                        </a>
                        </li>

                        <li class ="contact">
                            <a href="{{ path('app_contact') }}" class = "menu-link" title = "contact">

                                <span>Contact</span>
                            </a>
                        </li>

                {% elseif app.user %}
                    <li class="menu_deconnexion">
                        <a href="{{ path('app_logout') }}" title = "deconnexion">
                            <span>Se déconnecter</span>
                        </a>
                    </li>{% endif %}
            </ul>
                </nav>
        </div>
        <hr>
        </div>
    <div id="banniere"></div>
<div class = "container">
            <nav>
                <ul>
                    <li id ="actualites">
                    <span>Actualités </span>
                    </li>
                    <li id ="calendrier">
                    <span> Calendrier </span>
                    </li>
                </ul>
            </nav>
            {% for actualite in actualites %}
                <div id="texte-actu">
                {{ actualite.texte }}
                {{ actualite.createdAt | date ('d-m-Y')}}</div>
                    <div class="actualite">
                        <div id ="nom>"><h2>{{ actualite.nom }}</h2></div>
                        <div id ="image"><img src="{{ asset('images/actualites/' ~ actualite.imageName) }}" alt="image actualite"
                                              height="140%"
                             width= "100%"></div>

                    </div>
    {% endfor %}
            </div>
    <footer class="footer">
        <div class="footer-left">
            <p class="footer-links">
                <a href="{{ path('app_accueil') }}" class="link-1">Accueil</a>
                <a href="{{ path('app_recompenses') }}" >Récompenses</a>
                <a href="{{ path('app_tournois') }}" >Tournois</a>
                <a href="{{ path('app_contact') }}">Contact</a>
                <a href="{{ path('app_login') }}" >Se connecter</a>

            </p>
            <p class="footer-company-name">NHCI </p>
        </div>

        <div class="footer-right">
            <p class="footer-company-about">
                <span>About the company</span>
                Lorem ipsum dolor sit amet, consectateur adispicing elit. Fusce euismod convallis velit, eu auctor lacus vehicula sit amet.
            </p>
        </div>
    </footer>
    </body>
{% endblock %}


