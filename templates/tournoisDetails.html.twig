{% extends 'base.html.twig' %}

{% block title %}Shootfighter{% endblock %}
 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset ('css/app.css') }}">
 {%  endblock %}
{% block body %}
<body>
<div class="container-tournois">

<h1>{{ tournois.nom }}<br> {{ tournois.date | date ('d-m-Y') }}</h1>
<h2>{{ placesRestantes }}</h2>


    <div class ="bouton-detail">
        {% if app.user %}
            <a href="{{ path('app_inscription', {'idTournois': tournois.id, 'id': app.user.id}) }}" title = "detail">
                <img src="{{ asset('images/tournois/' ~ tournois.imageName) }}" alt="image tournoi" height="400px"
                     width="600px"></a>

        {% elseif not app.user %}
            <a href="{{ path('app_login')}}" title = "se connecter"><img src="{{ asset('images/tournois/' ~ tournois.imageName) }}" alt="image tournoi" height=400px"
                                                                         width="600px"></a>
        {% endif %}


    </div>
</div>
</body>
{% endblock %}




